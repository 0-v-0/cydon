template[shadowroot=open]
	style[lang=styl]{
		button
			padding 0.3em
		.wrapper
			display flex
			align-items center
	}
	.wrapper
		{$value}
		slot[n=increase]
			button[@click=value++]{+1}
		slot[n=decrease]
			button[@click=value--]{-1}
script[type=module]{
	import { bind, customElement } from 'cydon'

	@customElement('my-counter')
	export class MyCounter extends HTMLElement {
		value = +this.getAttribute('value')!

		constructor() {
			super()
			bind(this)
		}
	}
}