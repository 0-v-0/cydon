	"devDependencies": {
		"@custom-elements-manifest/analyzer": "^0.10.4",
		"@cydon/stylelint-config": "workspace:^",
		"@types/clean-css": "^4.2.11",
		"@unocss/transformer-directives": "^66.1.3",
		"@vitest/browser": "^3.2.2",
		"autoprefixer": "^10.4.21",
		"clean-css": "^5.3.3",
		"playwright": "^1.52.0",
		"postcss": "^8.5.4",
		"stylelint": "^16.20.0",
		"stylelint-stylus": "^1.0.0",
		"stylus": "^0.64.0",
		"terser": "^5.41.0",
