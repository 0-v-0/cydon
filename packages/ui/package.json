{
  "name": "@cydon/ui",
  "private": true,
  "version": "0.1.8",
  "description": "UI component library for Cydon",
  "repository": {
    "type": "git",
    "url": "https://github.com/0-v-0/cydon",
    "directory": "packages/ui"
  },
  "keywords": [
    "cydon"
  ],
  "bugs": {
    "url": "https://github.com/0-v-0/cydon/issues"
  },
  "packageManager": "pnpm@8.12.1",
  "browserslist": [
    "last 4 version",
    "Chrome >= 93",
    "not opera > 0",
    "not dead"
  ],
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@cydon/stylelint-config": "workspace:^",
    "@types/clean-css": "^4.2.11",
    "@unocss/transformer-directives": "^0.58.3",
    "@vitest/browser": "^1.1.3",
    "autoprefixer": "^10.4.16",
    "clean-css": "^5.3.3",
    "playwright": "^1.40.1",
    "postcss": "^8.4.33",
    "stylelint": "^16.1.0",
    "stylelint-stylus": "^1.0.0",
    "stylus": "^0.62.0",
    "terser": "^5.26.0",
    "typedoc": "^0.25.7",
    "unocss": "^0.58.3",
    "vite": "^5.0.11",
    "vite-plugin-emt": "workspace:*",
    "vite-plugin-inspect": "^0.8.1",
    "vite-plugin-progress": "^0.0.7"
  },
  "dependencies": {
    "cydon": "workspace:*"
  },
  "scripts": {
    "analyze": "cem analyze --globs **/*.ts --fast",
    "analyze:watch": "cem analyze --globs **/*.ts --fast --watch",
    "build": "vite build",
    "dev": "vite",
    "fix": "stylelint src/*.styl --fix",
    "lint": "pnpm lint:oxlint && stylelint src/*.styl",
    "lint:oxlint": "pnpx oxlint@latest --max-warnings=100 **/*.ts",
    "test": "pnpm vitest run"
  },
  "stylelint": {
    "extends": "@cydon/stylelint-config"
  },
  "type": "module",
  "customElements": "custom-elements.json"
}