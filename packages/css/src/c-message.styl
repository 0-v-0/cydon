c-message
	padding 0.9em 0.6em
	font-size var(--ui-font, 0.9em)
	color var(--ui-white, #fff)
	background-color var(--ui-dark, #4c5161)
	border-radius calc(var(--ui-radius, 0.4em) - 0.1em)
	box-shadow 0 0.3em 0.7em rgba(0,0,0,0.15)
	transition var(--ui-animate-time, 0.3s) cubic-bezier(0.645, 0.045, 0.355, 1)
	animation fadeIn 0.25s both

c-message[type=success]
	background-color var(--ui-green, #1cad70)
c-message[type=error]
	background-color var(--ui-red, #eb4646)
c-message[type=warning]
	background-color var(--ui-orange, #f59b00)
c-message[type=success]:before
c-message[type=error]:before
